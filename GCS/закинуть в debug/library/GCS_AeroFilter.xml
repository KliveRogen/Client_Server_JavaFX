<?xml version="1.0" encoding="UTF-8"?>
<Block BlockType="GCS_AeroFilter" BlockName="Аэрозольный фильтр" Tab="Газоочистка" Image="aerofilter.png">
    <Parameters>
        <Parameter Code="filterCrossSectionalArea" Name="Площадь поперечного сечения, м^2" Value="0.01" Tab="Параметры" Visible="true" Checkable="true"/>
        <Parameter Code="filterCatchCoef" Name="Коэффициент улавливания фильтра" Value="0.4" Tab="Параметры" Visible="true" Checkable="true"/>
        <Parameter Code="filterPressureLossCoef" Name="Коэффициент перепада давления из-за осаждения частиц, Па/кг" Value="1000" Tab="Параметры" Visible="true" Checkable="true"/>
        <Parameter Code="filterFiberLength" Name="Длина волокон, приходящихся на единицу площади фильтрующего материала, м-1" Value="10" Tab="Параметры" Visible="true" Checkable="true"/>
        <Parameter Code="filterResistanceForce" Name="Безразмерная сила сопротивления, действующая на единицу длины волокна" Value="20" Tab="Параметры" Visible="true" Checkable="true"/>
        <Parameter Code="filterInitMassParticle" Name="Начальная масса частиц на фильтре, кг" Value="0" Tab="Параметры" Visible="true" Checkable="true"/>
		<Parameter Code="maxParticleMass" Name="Максимальная масса частиц на фильтре, кг" Value="10" Tab="Параметры" Visible="true" Checkable="true"/>
		<Parameter Code="filterVolume" Name="Внутренний объем фильтра, м^3" Value="1" Tab="Параметры" Visible="true" Checkable="true"/>
		<Parameter Code="timeFilterBreak" Name="Время прорыва фильтра, с" Value="50" Tab="Настройки аварий" Visible="true" Checkable="true"/>
		<Parameter Code="timeFilterClog" Name="Время забивки фильтра, с" Value="50" Tab="Настройки аварий" Visible="true" Checkable="true"/>
		
    </Parameters>
    <Signals/>
    <Ports>
        <Port Input="true" Type="INFO" ToolTip="Входной газовый поток" ID="0" Dir="R" x="-8" y="15.5"/>
        <Port Input="false" Type="INFO" ToolTip="Выходной газовый поток" ID="1" Dir="R" x="58" y="15.5"/>
        <Port Input="false" Type="INFO" ToolTip="Выходные парметры фильтра" ID="2" Dir="U" x="24" y="-7.5"/>
		<Port Input="true" Type="INFO" ToolTip="Входной коэффициент сопротивления (от 0 до 1)" ID="3" Dir="L" x="58" y="39"/>
		<Port Input="false" Type="INFO" ToolTip="Выходной коэффициент сопротивления (от 0 до 1)" ID="4" Dir="L" x="-9" y="39"/>
    </Ports>
	<Situations>
        <Situation Code="filterBreak" Name="Прорыв фильтра" Tab="Отказы"/>
		<Situation Code="filterClog" Name="Забивка фильтра" Tab="Отказы"/>
    </Situations>
    <Visual_Signals/>
</Block>
