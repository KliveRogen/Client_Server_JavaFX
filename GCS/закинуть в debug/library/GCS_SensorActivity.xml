<?xml version="1.0" encoding="UTF-8"?>
<Block BlockType="GCS_SensorActivity" BlockName="Датчик объемной активности" Tab="Газоочистка" Image="SensorActivity.png">
    <Parameters>
        <Parameter Code="physicalUnits" Name="Единицы измерения (0 - Бк/м^3, 1 - нКи/м^3)" Value="0" Tab="Параметры" Visible="true" Checkable="true"/>
        <Parameter Code="minimumValue" Name="Нижняя граница чувствительности (в указанных ед. изм.)" Value="0" Tab="Параметры" Visible="true" Checkable="true"/>
        <Parameter Code="maximumValue" Name="Верхняя граница чувствительности (в указанных ед. изм.)" Value="10000000" Tab="Параметры" Visible="true" Checkable="true"/>
        <Parameter Code="divisionValue" Name="Цена деления (в указанных ед. изм.)" Value="0.1" Tab="Параметры" Visible="true" Checkable="true"/>
    </Parameters>
    <Signals>
        <Signal Code="activityValue" Name="Значение давления" Type="double" Tab="Сигналы"/>
		<Signal Code="sensorActivityUnit" Name="Единицы измерения" Type="double" Tab="Сигналы"/>
    </Signals>
    <Ports>
        <Port Input="true" Type="INFO" ToolTip="Вход датчика" ID="0" Dir="R" x="-8" y="27"/>
		<Port Input="false" Type="INFO" ToolTip="Выход датчика" ID="1" Dir="R" x="168" y="27"/>
    </Ports>
    <Situations/>
    <Visual_Signals>
        <Visual_signal Code="activityValue" Type="Value" Unit="" Quantity="10" SizeFont="10" x="15" y="39"/>
		<Visual_signal Type="Image" Code="sensorActivityUnit" Value="0" x="100" y="0">
            <Image Value="0" Path="sensorActivityUnitBKperM3.png"/>
            <Image Value="1" Path="sensorActivityUnitNKperM3.png"/>
        </Visual_signal>
    </Visual_Signals>
</Block>
